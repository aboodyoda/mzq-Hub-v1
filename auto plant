-- Function to check if the PlantBox already contains a Bloodfruit
local function containsBloodfruit(plantBox)
    return plantBox:FindFirstChild("Bloodfruit") ~= nil
end

-- Function to place Bloodfruit in a PlantBox that doesn't already contain a Bloodfruit
local function placeBloodfruitInEmptyPlantBox()
    local deployables = workspace.Deployables
    for _, object in ipairs(deployables:GetChildren()) do
        if object.Name == "Plant Box" and not containsBloodfruit(object) then
            local args = {
                [1] = object,
                [2] = "Bloodfruit"
            }
            game:GetService("ReplicatedStorage").Events.lnteractStructure:FireServer(unpack(args))
            break
        end
    end
end

-- Loop to continuously check for empty PlantBox and plant the selected fruit
while true do
    wait(1) -- Adjust the wait time as needed
    if isToggled then
        placeBloodfruitInEmptyPlantBox()
    end
end
